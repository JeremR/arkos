# Maintainer: Jacob Cook <jacob@ark-os.org>

pkgname=pacman-mirrorlist
pkgver=20130323
pkgrel=1
pkgdesc="arkOS mirror list for use by pacman"
arch=('arm' 'armv6h')
url="http://pkg.ark-os.org/"
license=('GPL')
groups=('base')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)
md5sums=('5315b737a4ce0a956021d621f242219c')

build() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}
